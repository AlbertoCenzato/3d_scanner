{
	"name": "raspberry-pi",
	"build": {
		"dockerfile": "../docker/Dockerfile",
		"options": [
			"--platform",
			"linux/arm/v7"
		]
	},
	"runArgs": [
		"--platform",
		"linux/arm/v7"
	],
	"mounts": [
		"source=cargo-home,target=/root/.cargo,type=volume"
	],
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"jmfirth.vsc-space-block-jumper",
				"serayuzgur.crates",
				"tamasfe.even-better-toml",
				"mhutchie.git-graph",
				"rust-lang.rust-analyzer"
			]
		}
	}
}